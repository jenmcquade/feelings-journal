{
	"version": "0.2.0",
	"configurations": [
	  {
		"name": "Listen for Xdebug",
		"type": "php",
		"request": "launch",
		"port": 9003,
		"log": true,
		"externalConsole": false,
		"pathMappings": {
		  "/var/www/html": "${workspaceFolder}"
		},
		"hostname": "localhost",
		"xdebugSettings": {
			"max_data": 3000,
			"show_hidden": 1,
			"max_children": 100,
			"max_depth": 5
		},
		"skipFiles": [
		  "**/_ide_helper.php",
		  "**/vendor/**/*.php"
		],
		"ignore": [
			"**/_ide_helper.php",
			"**/_ide_helper_models.php",
			"**/*.json",
			"**.*.csv",
			"**/*.log",
			"**/*.md",
			"**/vendor/**/*.php"
		]
	  }
	]
  }